//This query looks for email events in the last seven days where the subject contains certain keywords, the senderâ€™s domain is different from the recipients, and the count of such emails exceeds a threshold.

let lookbackTime = 7d;
let threshold = 5;
EmailEvents
| where TimeGenerated >= ago(lookbackTime)
| where Subject has_any ("urgent", "payment", "required", "request")
| where SenderFromDomain != RecipientDomain
| summarize Count = count() by SenderFromDomain, RecipientEmailAddress
| where Count > threshold
| project SenderFromDomain, RecipientEmailAddress, Count
